<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="gameTitleAppearence" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="theme">@style/TextAppearance.AppCompat.Large</item>
    </style>

    <style name="priceAppearence" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/buy</item>
        <item name="android:textStyle">bold</item>
        <item name="theme">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="buttonBuyAppearence" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="theme">@style/TextAppearance.AppCompat.Medium</item>
    </style>

    <style name="gameDescriptionAppearence" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="theme">@style/TextAppearance.AppCompat.Medium</item>
    </style>
